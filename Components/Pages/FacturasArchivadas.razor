@page "/facturas-archivadas"
@using FacturasWEB.Components.Data
@using FacturasWEB.Components.Servicios
@inject ServicioControlador Controlador
@rendermode InteractiveServer

<h3>Archivo Muerto de Facturas</h3>

@if (!accesoConcedido)
{
    <div class="mat-card" style="max-width: 400px; margin: 50px auto; text-align: center;">
        <i class="bi bi-lock-fill" style="font-size: 3rem; color: var(--primary-dark);"></i>
        <h4 class="mt-3">Acceso Restringido</h4>
        <p>Ingrese la contraseña de administrador</p>

        <div class="mat-form-group text-start">
            <input type="password" class="mat-input" @bind="passwordInput" placeholder="Contraseña..." />
        </div>

        <button class="mat-btn mat-btn-primary w-100" @onclick="VerificarPassword">
            Entrar
        </button>

        @if (errorPass)
        {
            <p class="text-danger mt-2">Contraseña incorrecta</p>
        }
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Facturas Ocultas</h5>
        <button class="mat-btn mat-btn-secondary" @onclick="CerrarAcceso">Bloquear</button>
    </div>

    @if (facturasArchivadas == null || !facturasArchivadas.Any())
    {
        <div class="alert alert-warning mat-card">No hay facturas en el archivo.</div>
    }
    else
    {
        <div class="mat-table-container">
            <table class="mat-table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Artículos</th>
                        <th style="text-align: right;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in facturasArchivadas)
                    {
                        <tr style="background-color: #f9f9f9; color: #777;">
                            <td>@factura.Fecha</td>
                            <td>@factura.Nombre</td>
                            <td>@factura.Articulos.Count()</td>
                            <td style="text-align: right;">
                                <button class="mat-btn mat-btn-primary btn-sm" @onclick="() => Restaurar(factura)">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restaurar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    private bool accesoConcedido = false;
    private string passwordInput = "";
    private bool errorPass = false;
    private List<Factura> facturasArchivadas;

    // CONTRASEÑA MAESTRA (Cámbiala por la que quieras)
    private const string PASSWORD_SECRETA = "admin123";

    protected override async Task OnInitializedAsync()
    {
        facturasArchivadas = await Controlador.ObtenerArchivadas();
    }
    private async Task VerificarPassword()
    {
        if (passwordInput == PASSWORD_SECRETA)
        {
            accesoConcedido = true;
            errorPass = false;
            await CargarDatos();
        }
        else
        {
            errorPass = true;
        }
    }

    private void CerrarAcceso()
    {
        accesoConcedido = false;
        passwordInput = "";
        facturasArchivadas = null;
    }

    private async Task CargarDatos()
    {
        facturasArchivadas = await Controlador.ObtenerArchivadas();
    }

    private async Task Restaurar(Factura f)
    {
        await Controlador.DesarchivarFactura(f.ID_factura);
        await CargarDatos();
    }
}